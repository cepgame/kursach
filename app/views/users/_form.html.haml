= form_for @user do |f|
  = error_messages_for @user
  .row
    .col-md-3
      .form-group
        = f.label :email
        = f.text_field :email, class: 'form-control'
        = f.error_messages_for(:email)
  - if @user.new_record?
    .row
      .col-md-3
        .form-group
          = f.label :password
          = f.password_field :password, class: 'form-control'
          = f.error_messages_for(:password)
      .col-md-3
        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, class: 'form-control'
          = f.error_messages_for(:password_confirmation)
  - if @current_role_user.present? and @current_role_user.is_admin?
    - i = 0
    =f.fields_for :role_users do |fr|
      fr.hidden_field :id
      .col-md-3
        .panel.panel-success
          .panel-heading
            Роль
            = i + 1
          .panel-body
            .row
              .cow-md-3
                .from-group
                  =fr.label :role_id
                  =fr.text_field :role_id, class: 'form-control'
                  =fr.error_messages_for :role_id
              .cow-md-3
                .from-group
                  =fr.label :data
                  =fr.text_field :data, class: 'form-control'
                  =fr.error_messages_for :data

  .form-actions
    = f.submit nil, class: 'btn btn-primary'

