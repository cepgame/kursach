= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :short_desc
    = f.text_field :short_desc
  .field
    = f.label :full_desc
    = f.text_area :full_desc
  .field
    = f.label :img_id_list
    = f.text_area :img_id_list
  .field
    = f.label :base_price
    = f.text_field :base_price
  .field
    = f.label :current_price
    = f.text_field :current_price
  .field
    = f.label :amt_in_stock
    = f.number_field :amt_in_stock
  .field
    = f.label :ven_code
    = f.number_field :ven_code
  .field
    = f.label :min_amt_in_order
    = f.number_field :min_amt_in_order
  .actions
    = f.submit 'Save'
