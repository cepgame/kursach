= form_for @product do |f|
  = error_messages_for @product
  .row
    .col-md-4	
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
        = f.error_messages_for(:name)
    .col-md-4
      .form-group
        = f.label :short_desc
        = f.text_field :short_desc, class: 'form-control'
        = f.error_messages_for(:short_desc)
    .col-md-2
      .form-group
        = f.label :base_price
        = f.text_field :base_price, class: 'form-control'
        = f.error_messages_for(:base_price)
    .col-md-2
      .form-group
        = f.label :current_price
        = f.text_field :current_price, class: 'form-control'
        = f.error_messages_for(:current_price)
    .col-md-8
      .form-group
        = f.label :full_desc
        = f.text_area :full_desc, class: 'form-control'
        = f.error_messages_for(:full_desc)
    .col-md-3
      .form-group
        = f.label :img_id_list
        = f.text_area :img_id_list, class: 'form-control'
        = f.error_messages_for(:img_id_list)
    .col-md-2
      .form-group
        = f.label :amt_in_stock
        = f.number_field :amt_in_stock, class: 'form-control'
        = f.error_messages_for(:amt_in_stock)
    .col-md-2
      .form-group
        = f.label :min_amt_in_order
        = f.number_field :min_amt_in_order, class: 'form-control'
        = f.error_messages_for(:min_amt_in_order)
    .col-md-2
      .form-group
        = f.label :ven_code
        = f.number_field :ven_code, class: 'form-control'
        = f.error_messages_for(:ven_code)
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
