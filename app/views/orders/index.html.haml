=breadcrumb_tag do
  %li.active
    Заказы
  %li
    Администрирование
    
%h1= t('app.orders.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.orders.new-button'), new_order_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Order.human_attribute_name(:client)
      %th= Order.human_attribute_name(:number)
      %th= Order.human_attribute_name(:pay_method)
      %th= Order.human_attribute_name(:delivery_method)
      %th= Order.human_attribute_name(:product_list)
      %th= Order.human_attribute_name(:cost_of_products)
      %th= Order.human_attribute_name(:total_cost)
      %th= Order.human_attribute_name(:date_of_order)
      %th.p50
      %th.p50
      %th.p50
      
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.client
        %td= order.number
        %td= order.pay_method
        %td= order.delivery_method
        %td= order.product_list
        %td= order.cost_of_products
        %td= order.total_cost
        %td= order.date_of_order
        %td
          = link_to order, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_order_path(order), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to order, :method => :delete, :data => { confirm: t('helpers.sure') }, class: 'btn btn-danger' do
            =fa_icon :times
